/* pages/join/join.wxss */
text, view, image {
  padding: 0;
  margin: 0;
}
.join-container {
  background-color: #f3f3f3;
  width: 100%;
  height: 100%;
}
.banner {
  width: 100%;
  height: 374rpx;
  margin-bottom: 5rpx;
}
.text-container .text-one {
  background-color: #fff;
  width: 100%;
  padding: 30rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
.text-one .title {
  color: #2e5e86;
  font-size: 35rpx;
  font-weight: 550;
  position: relative;
  line-height: 1.5;
  text-indent: 40rpx;
}
.text-one .title::after{
  content: "";
  position: absolute;
  left: 0rpx;
  top: 3rpx;
  width: 15rpx;
  height: 50rpx;
  background-color: #2e5e86;
}
.text-one .desc {
  display: block;
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.5;
}
.text-one .contact-img {
  display: flex;
  justify-content: center;
  margin: 10rpx 0;
}
.text-one .contact-img image {
  width: 300rpx;
  height: 300rpx;
}
.text-one .note-text {
  text-align: center;
}
.footer {
  display: flex;
  justify-content: space-around;
}
.footer button {
  color: #fff;
  background-color: #2e5e86;
  font-size: 30rpx;
  width: 370rpx;
}